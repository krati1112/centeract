<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scientific Calculator"
        android:layout_gravity="center" 
        android:textSize="30dp"
        android:textColor="#FF6993"
        />
    <EditText 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/edt"/>
     <TableLayout 
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:orientation="vertical"
         
         android:padding="20dp"> 
         
          <TableRow 
             android:layout_marginBottom="20dp">
         <Button 
             android:layout_height="40dp"
             android:layout_width="50dp"
             android:text="Del"
             android:id="@+id/btdclear"/>
         <Button 
             android:layout_height="40dp"
             android:layout_width="wrap_content"
             android:text="ClR"
             android:id="@+id/bterase"/>
          <Button 
             android:layout_height="40dp"
             android:layout_width="wrap_content"
             android:text="BK"
             android:id="@+id/btback"/>
         
         <Button 
             android:layout_height="40dp"
             android:layout_width="wrap_content"
             android:text="Sft"
             android:id="@+id/btshift"/>
         
         </TableRow>
         <TableRow 
             android:layout_marginBottom="20dp">
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="1"
             android:id="@+id/btone"/>
         
         
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="2"
             android:id="@+id/btwo"/>
          <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="3"
             android:id="@+id/bthree"/>
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="+"
             android:id="@+id/btplus"/>
           
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="X2"
             android:id="@+id/btsqr"/>
           
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="X3"
             android:id="@+id/btcube"/>
         
         
         </TableRow>
         
          <TableRow 
              android:layout_marginBottom="20dp">
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="4"
             android:id="@+id/btfour"/>
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="5"
             android:id="@+id/btfive"/>
          <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="6"
             android:id="@+id/btsix"/>
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="-"
             android:id="@+id/btsub"/>   
             
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="Xr"
             android:id="@+id/btsqrrut"/>
           
           <Button 
             android:layout_height="40dp"
             android:layout_width="50dp"
             android:text="Pie"
             android:id="@+id/btpie"/>
         </TableRow>
         
           <TableRow 
               android:layout_marginBottom="20dp">
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="7"
             android:id="@+id/btseven"/>
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="8"
             android:id="@+id/bteight"/>
          <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="9"
             android:id="@+id/btnine"/>
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="/"
             android:id="@+id/btdiv"/>        
         </TableRow>
         
            <TableRow 
                android:layout_marginBottom="20dp">
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="."
             android:id="@+id/btdot"/>
         <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="0"
             android:id="@+id/btzero"/>
          <Button 
             android:layout_height="40dp"
             android:layout_width="20dp"
             android:text="="
             android:id="@+id/btequal"/>
           <Button 
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:text="*"
             android:id="@+id/btmul"/>         
         
         </TableRow>
     </TableLayout>
</LinearLayout>